<div class="card">
  <div class="card-header">
    <h2>Crear Producto</h2>
  </div>
  <div class="card-body">
    <%= form_with model: @product, url: products_path, local: true do |form| %>
      <div class="form-group">
        <%= form.label :name, class: "form-label" %>
        <%= form.text_field :name, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :category, class: "form-label" %>
        <%= form.select :category, ["CR7", "Leo", "Ney"], { prompt: "Seleccione una categorÃ­a" }, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :description, class: "form-label" %>
        <%= form.text_area :description, class: "form-control text-area" %>
      </div>

      <div class="form-group">
        <%= form.label :price, class: "form-label" %>
        <%= form.text_field :price, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :image, class: "form-label" %>
        <%= form.file_field :image, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.submit "Crear", class: "btn btn-primary btn-block" %>
      </div>
    <% end %>
  </div>
</div>



<%= stylesheet_link_tag 'productos_new', media: 'all' %>